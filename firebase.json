{
  "hosting": {
    "public": "frontend/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "backend", // nom exact du service Cloud Run
          "region": "europe-west1" // r√©gion du service Cloud Run
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}